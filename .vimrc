set noswapfile
set nobackup

set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set smarttab

set backspace=indent,eol,start
set whichwrap+=<,>,h,l,[,]
set mouse=a

inoremap <c-q> <c-o>:q<cr>

inoremap <c-f> <c-o>/
inoremap <c-f>f <c-o>:nohlsearch<cr>
inoremap <c-f><c-f> <c-o>:nohlsearch<cr>
