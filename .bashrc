# ls
alias ls="ls -l -G -L -h -v --group-directories-first --color=always"
alias la="ls -A"
alias ll="ls -H"
alias lla="ll -A"

# grep
alias grep="grep -R --color=auto"
alias fgrep="fgrep -R --color=auto"
alias egrep="egrep -R --color=auto"

# Python
alias python='python3'

# Docker
alias dcu="docker compose up -d"
alias dcd="docker compose down"
